#include <iostream>
#include <stdlib.h>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
class Clock
{
public:
	Clock(int h,int m,int s);
	void ShowClock();
	int GetHour();
	int GetMinute();
	int GetSecond();
	void SetHour(int h);
	void SetMinute(int m);
	void SetSecond(int s);
	
private:
	int Hour,Minute,Second;
};

Clock::Clock(int h,int m,int s)
{
	Hour = h;
	Minute = m;
	Second = s;
}

void Clock::ShowClock()
{
	cout<<Hour<<":"<<Minute<<":"<<Second<<endl;
}

int Clock::GetHour()
{
	return Hour;
}

int Clock::GetMinute()
{
	return Minute;
}

int Clock::GetSecond()
{
	return Second;
}

void Clock::SetHour(int h)
{
	Hour = h;
}

void Clock::SetMinute(int m)
{
	Minute = m;
}

void Clock::SetSecond(int s)
{
	Second = s;
}
class Newclock:public Clock{
	public:
	Newclock(int h,int m,int s):Clock(h,m,s){
	}
	void Add_sec();//实现时间增加一秒的功能。
	void Add_min(); //实现时间增加一分钟的功能。
	void Add_hour();//实现时间增加一个小时的功能。
	void PMAM();//以pm  am的格式显示时间。

};

void Newclock::Add_sec(){
	int second=GetSecond();
	if(second>=59)
	{
	second=0;
	Add_min();
	}
	else
	second++;
	SetSecond(second);
}
void Newclock::Add_min(){
	int minute=GetMinute();
	if(minute>=59)
	{
	minute=0;
	Add_hour();
	}
	else
	minute++;
	SetMinute(minute);
}
void Newclock::Add_hour(){
	int hour=GetHour();
	if(hour>=23)
	hour=0;
	else
	hour++;
	SetHour(hour);
}
void Newclock::PMAM(){
	int h,m,s;
	h=GetHour();
	m=GetMinute();
	s=GetSecond();
	if(h>12){
    h-=12;
	cout<<"PM:"<<h<<":"<<m<<":"<<s;}
	else
	cout<<"AM:"<<h<<":"<<m<<":"<<s;
}
int main(int argc, char** argv) {
    Newclock c(12,59,0);
    while(1){
    	_sleep(1000);
    	c.Add_sec();
    	system("cls");
    	c.PMAM();
	}
	return 0;
} 
