#include <iostream>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
const double PI=3.1415926;
class Shape2D{
	protected:
	double BaseX,BaseY;
    public:
	Shape2D(double x, double y):BaseX(x),BaseY(y){};
	virtual double Area()=0;
	virtual double Primeter()=0;
};
class Circle:public Shape2D       
{
	double radius;
public:
	Circle(double x, double y, double r) : Shape2D(x,y), radius(r){};
	double Area(){return PI*radius*radius;}
	double Primeter(){return PI*2*radius;}
	
};
class Rectangle:public Shape2D     
{
	double Length, Width;
public:
	Rectangle(double x, double y, double l, double w) :Shape2D(x,y), Length(l), Width(w){}
	double Area(){return (Length-BaseX)*(Width-BaseY);}
    double Primeter(){return 2*(Length-BaseX+Width-BaseY);}
};
double cost(Shape2D &s){
    	double a=s.Area()*35;
        double b=s.Primeter()*20;
        cout<<" "<<a<<" "<<b<<" "; 
	}  
int main(int argc, char** argv) {
    Circle cir(1.0, 1.0, 5.0);
	double s1 = cir.Area();
	cost(cir);
	Rectangle rect(2.0, 0.0, 6.0, 7.5);
	double s2 = rect.Area();
    cost(rect);

	return 0;
}
